/* SUBMENU (DESKTOP) */
.submenu { position:absolute; top:60px; left:0; width:100%; background:#1e0949; border-radius:0 0 20px 20px; box-shadow:0 8px 20px rgba(0,0,0,0.4); opacity:0; visibility:hidden; transform:translateY(10px); transition:opacity 0.25s, transform 0.25s; pointer-events:none; z-index:999; }
