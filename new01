<script>
function toggleMobileMenu(el) {
  el.classList.toggle('active');
  document.querySelector('.mobile-menu').classList.toggle('active');
}
function toggleSubmenu(e) {
  e.preventDefault();
  e.target.parentElement.classList.toggle('expanded');
}
</script>

